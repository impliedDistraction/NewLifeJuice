<section id="home" class="pt-16 md:pt-20 bg-gradient-to-br from-green-50 to-blue-50 min-h-screen flex items-center">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-24">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Hero Content -->
            <div class="space-y-6 lg:space-y-8">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
                    Fresh. Natural. 
                    <span class="text-green-600 bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">
                        Life-Changing.
                    </span>
                </h1>
                <p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-2xl">
                    Experience the power of premium fresh juices, crafted with the finest ingredients and delivered to your door. Transform your health, one sip at a time.
                </p>
                <div class="pt-4">
                    <a href="#order" class="inline-block bg-green-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-green-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                        Start Your Journey
                    </a>
                </div>
            </div>

            <!-- Hero Image -->
            <div class="flex justify-center lg:justify-end">
                <div class="relative">
                    <div class="w-80 h-80 md:w-96 md:h-96 rounded-full bg-gradient-to-br from-green-400 to-blue-500 opacity-20 absolute -top-4 -left-4"></div>
                    <img 
                        src="/images/hero-juice.jpg" 
                        alt="Fresh New Life Juice bottles" 
                        class="w-80 h-80 md:w-96 md:h-96 object-cover rounded-2xl shadow-2xl relative z-10"
                        loading="eager"
                    >
                </div>
            </div>
        </div>
    </div>
</section>
