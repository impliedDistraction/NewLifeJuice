---
const products = [
    { id: "green-detox", name: "Green Detox", price: 18 },
    { id: "citrus-burst", name: "Citrus Burst", price: 18 },
    { id: "berry-antioxidant", name: "Berry Antioxidant", price: 18 },
    { id: "tropical-paradise", name: "Tropical Paradise", price: 18 },
    { id: "root-vegetable", name: "Root Vegetable", price: 18 }
];
---

<section id="order" class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
                Place Your Order
            </h2>
            <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                Select your juices and we'll deliver fresh nutrition to your door.
            </p>
        </div>

        <!-- Order Form -->
        <form class="max-w-4xl mx-auto space-y-8" action="https://formspree.io/f/xldlpljw" method="POST">
            <!-- Delivery Options -->
            <div class="bg-gray-50 rounded-2xl p-6 md:p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">Delivery Options</h3>
                <div class="space-y-4">
                    <label class="flex items-center space-x-4 p-4 bg-white rounded-xl cursor-pointer hover:bg-green-50 transition-colors duration-200">
                        <input type="radio" name="delivery_method" value="pickup" checked class="w-4 h-4 text-green-600">
                        <div>
                            <div class="font-semibold text-gray-900">üè™ Pickup at Church</div>
                            <div class="text-gray-600">Pick up your fresh juices at our church location</div>
                        </div>
                    </label>
                    <label class="flex items-center space-x-4 p-4 bg-white rounded-xl cursor-pointer hover:bg-green-50 transition-colors duration-200">
                        <input type="radio" name="delivery_method" value="delivery" class="w-4 h-4 text-green-600">
                        <div>
                            <div class="font-semibold text-gray-900">üöö Home Delivery</div>
                            <div class="text-gray-600">We'll deliver fresh juices right to your door</div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Product Selection -->
            <div class="bg-gray-50 rounded-2xl p-6 md:p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">Select Your Juices</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    {products.map((product) => (
                        <div class="flex items-center justify-between p-4 bg-white rounded-xl">
                            <span class="font-medium text-gray-900">{product.name} - ${product.price}</span>
                            <input 
                                type="number" 
                                name={product.id.replace('-', '_') + '_quantity'}
                                min="0" 
                                max="20" 
                                value="0"
                                class="w-16 px-2 py-1 border border-gray-300 rounded-lg text-center focus:ring-2 focus:ring-green-500 focus:border-green-500"
                            >
                        </div>
                    ))}
                </div>
                
                <div class="text-right">
                    <div class="text-xl font-bold text-green-600">
                        Order Total: <span id="orderTotal">$0.00</span>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="bg-gray-50 rounded-2xl p-6 md:p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-6">Contact Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                        <input 
                            type="text" 
                            id="first-name" 
                            name="first_name" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        >
                    </div>
                    <div>
                        <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                        <input 
                            type="text" 
                            id="last-name" 
                            name="last_name" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        >
                    </div>
                    <div class="md:col-span-2">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        >
                    </div>
                    <div class="md:col-span-2">
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
                        <input 
                            type="tel" 
                            id="phone" 
                            name="phone" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        >
                    </div>
                    <div class="md:col-span-2 delivery-only hidden">
                        <label for="address" class="block text-sm font-medium text-gray-700 mb-2">Delivery Address *</label>
                        <textarea 
                            id="address" 
                            name="address" 
                            rows="3"
                            placeholder="Please include street address, city, state, and ZIP code"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        ></textarea>
                    </div>
                    <div class="md:col-span-2">
                        <label for="special-instructions" class="block text-sm font-medium text-gray-700 mb-2">Special Instructions</label>
                        <textarea 
                            id="special-instructions" 
                            name="special_instructions" 
                            rows="2"
                            placeholder="Any preferences or dietary notes"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        ></textarea>
                    </div>
                </div>
            </div>

            <!-- Payment Information -->
            <div class="bg-gray-50 rounded-2xl p-6 md:p-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Payment Information</h3>
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <p class="text-gray-700 mb-3">We'll contact you within 24 hours to arrange payment and confirm your delivery schedule. We accept:</p>
                    <ul class="text-gray-600 space-y-1">
                        <li>‚Ä¢ Credit/Debit Cards</li>
                        <li>‚Ä¢ PayPal</li>
                        <li>‚Ä¢ Venmo</li>
                        <li>‚Ä¢ Cash on Delivery</li>
                    </ul>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button 
                    type="submit" 
                    class="bg-green-600 text-white px-12 py-4 rounded-full text-lg font-semibold hover:bg-green-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
                >
                    Place Order
                </button>
            </div>
        </form>
    </div>
</section>

<script>
    // Order total calculation and delivery method toggle
    document.addEventListener('DOMContentLoaded', function() {
        const quantityInputs = document.querySelectorAll('input[type="number"]');
        const orderTotal = document.getElementById('orderTotal');
        const deliveryRadios = document.querySelectorAll('input[name="delivery_method"]');
        const deliveryOnlyFields = document.querySelectorAll('.delivery-only');
        
        function updateTotal() {
            let total = 0;
            quantityInputs.forEach(input => {
                const quantity = parseInt(input.value) || 0;
                total += quantity * 18; // All juices are $18
            });
            if (orderTotal) {
                orderTotal.textContent = `$${total.toFixed(2)}`;
            }
        }
        
        function toggleDeliveryFields() {
            const isDelivery = document.querySelector('input[name="delivery_method"]:checked')?.value === 'delivery';
            deliveryOnlyFields.forEach(field => {
                if (isDelivery) {
                    field.classList.remove('hidden');
                    field.querySelector('textarea')?.setAttribute('required', '');
                } else {
                    field.classList.add('hidden');
                    field.querySelector('textarea')?.removeAttribute('required');
                }
            });
        }
        
        quantityInputs.forEach(input => {
            input.addEventListener('input', updateTotal);
        });
        
        deliveryRadios.forEach(radio => {
            radio.addEventListener('change', toggleDeliveryFields);
        });
        
        // Initialize
        updateTotal();
        toggleDeliveryFields();
    });
</script>
